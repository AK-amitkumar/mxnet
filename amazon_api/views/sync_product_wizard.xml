<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--获取产品数据-->
        <record id="get_product_data_wizard" model="ir.ui.view">
            <field name="name">get_product_data_wizard</field>
            <field name="model">sync.product.wizard</field>
            <field name="arch" type="xml">
				<form string="">
					<div>点击【开始】按钮，系统将会后台执行该操作，请耐心等待！</div>
                    <footer>
                        <button name="get_product_data" string="开始" type="object" class="oe_highlight"/>
                        <button string="取消" class="oe_highlight" special="cancel"/>
                    </footer>
				</form>
			</field>
        </record>
        <!--创建更新产品-->
        <record id="create_update_product_wizard" model="ir.ui.view">
            <field name="name">create_update_product_wizard</field>
            <field name="model">sync.product.wizard</field>
            <field name="arch" type="xml">
				<form string="">
					<div>点击【开始】按钮，系统将会后台执行该操作，请耐心等待！</div>
                    <footer>
                        <button name="create_update_product" string="开始" type="object" class="oe_highlight"/>
                        <button string="取消" class="oe_highlight" special="cancel"/>
                    </footer>
				</form>
			</field>
        </record>
    </data>
</odoo>

